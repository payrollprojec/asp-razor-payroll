<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Payroll App</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: #f7f7f7;
        }

        .make-me-sticky {
            position: -webkit-sticky;
            position: sticky;
            top: 0;
        }

        .sidebar-item {
            /*position: absolute;*/
            top: 0;
            /*left: 0;*/
            width: 100%;
            height: 100%;
        }

        @@media (max-width: 767.98px) {
            .sidebar-item {
                position: relative;
            }

            .fancy-floating {
                margin-top: 0 !important;
                padding: 0 !important;
                overflow: auto;
            }

            header {
                position: relative !important;
                width: 100%;
            }

            .fancy-floating .card {
                border: none !important;
            }
        }

        @@media (max-width: 577px) {
            .side {
                display: none;
            }

            .hide-top {
                display: block !important;
                color: white !important;
            }

                .hide-top .nav-item > .nav-link {
                    color: white;
                }
        }

        html, body, .main, main {
            height: 100%;
            margin-bottom: 0;
        }

        .nav-pills .nav-link {
            border-radius: 0;
            /*color: #0b66a1;*/
            /*color: #eb5e5e;*/
            padding: 15px;
        }

        header {
            position: absolute;
            width: 100%;
            z-index: 999;
        }

        nav {
            background-color: rgb(104,15,19);
        }

        .side {
            background-color: white;
            border: 0;
            border-right: 0.1px solid #e1e1e1;
        }

            .side .nav-item > .nav-link {
                color: #666;
            }

                .side .nav-item > .nav-link.active {
                    background-color: rgba(104, 15, 19, 1) !important;
                    color: white;
                }

            .side .nav-item > a.nav-link:hover {
                color: white;
                background-color: rgba(125, 30, 34, 0.80);
            }

        .earn-duct .form-group {
            margin-bottom: 0;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css" integrity="sha256-46r060N2LrChLLb5zowXQ72/iKKNiw/lAmygmHExk/o=" crossorigin="anonymous" />

</head>
@{ 
    var actionName = ViewContext.RouteData.Values["page"].ToString();
}
<body>
    <header class="d-print-none">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Payroll App</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">Home</a>
                        </li>

                    </ul>
                    <ul class="nav nav-pills flex-column hide-top" style="display: none">

                        @if (User.IsInRole("superadmin") || User.IsInRole("admin"))
                        {
                            <li class="nav-item"><a class="nav-link @(actionName == "/Index" ? "active":"")" asp-page="/Index"><i class="fas fa-tachometer-alt fa-fw"></i>  Dashboard</a></li>
                            @if (User.IsInRole("superadmin"))
                            {
                                <li class="nav-item"><a class="nav-link @(actionName.Contains("/Manage/Admin") ? "active":"")" asp-page="/Manage/Admin/Index"><i class="fas fa-user-tie fa-fw"></i>  Manage Admin</a></li>
                            }
                            <li class="nav-item"><a class="nav-link @(actionName.Contains("/Manage/Staff") ? "active":"")" asp-page="/Manage/Staff/Index"><i class="fas fa-users fa-fw"></i>  Manage Staff</a></li>
                            <li><br /></li>
                            <li class="nav-item"><a class="nav-link @(actionName.Contains("/Manage/Salaries") ? "active":"")" asp-page="/Manage/Salaries/Index"><i class="fas fa-file-invoice-dollar fa-fw"></i> Manage Salaries</a></li>
                            <li class="nav-item"><a class="nav-link @(actionName.Contains("/Manage/Attendances") ? "active":"")" asp-page="/Manage/Attendances/Index"><i class="fas fa-clipboard-list fa-fw"></i> Manage Attendance</a></li>
                            <li><br /></li>

                            <li class="nav-item"><a class="nav-link @(actionName.Contains("/SalarySettings") ? "active":"")" asp-page="/SalarySettings/Index"><i class="fas fa-sliders-h fa-fw"></i> Salary Settings</a></li>
                            <li class="nav-item"><a class="nav-link @(actionName.Contains("/DateSettings") ? "active":"")" asp-page="/DateSettings/Index"><i class="fas fa-calendar-day fa-fw"></i> Holiday Settings</a></li>
                            <li class="nav-item"><a class="nav-link @(actionName.Contains("/WorkDaySettings") ? "active":"")" asp-page="/WorkDaySettings"><i class="fas fa-briefcase fa-fw"></i> Workday Settings</a></li>


                        }

                        @if (User.IsInRole("staff"))
                        {
                            <li class="nav-item"><a class="nav-link @(actionName == "/Index" ? "active":"")" asp-page="/Index"><i class="fas fa-tachometer-alt fa-fw"></i> Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link @(actionName.Contains("/Staff/Attendance") ? "active":"")" asp-page="/Staff/Attendance"><i class="fas fa-clipboard-list fa-fw"></i> Check Attendance</a></li>
                            <li class="nav-item"><a class="nav-link @(actionName.Contains("/Staff/Salary") ? "active":"")" asp-page="/Staff/Salary"><i class="fas fa-file-invoice-dollar fa-fw"></i> Check Salary</a></li>
                            <li class="nav-item"><a class="nav-link @(actionName.Contains("/DateSettings/Index") ? "active":"")" asp-page="/DateSettings/Index"><i class="fas fa-calendar-day fa-fw"></i> Check Holiday</a></li>

                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid main">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    @*<footer class="border-top footer text-muted d-print-none" style="overflow: hidden;">
            <div class="container">
                &copy; 2020 - Payroll App
            </div>
        </footer>*@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
<script type="text/javascript">
    window.addEventListener('load', function () {
        $(".alert").delay(2000).slideUp(200, function () {
            $(this).alert('close');
        });
    });
</script>