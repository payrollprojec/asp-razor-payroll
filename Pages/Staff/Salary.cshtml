@page
@model PayrollAppRazorPages.Pages.Staff.SalaryModel
@{
    ViewData["Title"] = "Salary";
}

<div class="container row jumbotron bg-success" style="margin-left: 10px;">
    <div class="container row">
        <div class="col-auto text-white"><h4>Salary</h4></div>
        <div class="col-auto">
            <form>
                <select class="form-control-sm mr-md-3" asp-for="SelectedYear" asp-items="Model.Years">
                </select>
                <input type="submit" value="Filter" />
            </form>
        </div>
    </div>
</div>

<div class="fancy-floating" style="padding: 0 55px; margin-top: -66px;">
    <table class="table table-striped table-hover table-sm text-center " style="background-color:white;">
        <thead class="thead-light">
            <tr>
                <th>
                    Month
                </th>
                <th>
                    Net
                </th>
                <th>
                    View Salary
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SalaryList)
            {
            if (item.Net > 0)
            {
            <tr>
                <td>
                    @item.Month
                </td>
                <td>
                    RM @Html.DisplayFor(model => item.Net)
                </td>
                <td>
                    <a asp-page="./SalaryDetails" asp-route-id="@item.Id">@item.GenDate.ToShortDateString()</a>
                </td>
            </tr>
            }
            else
            {
            <tr>
                <td>
                    @item.Month
                </td>
                <td class="text-center">
                    -
                </td>
                <td class="text-center">
                    -
                </td>
            </tr>
            }
            }
        </tbody>
    </table>
</div>