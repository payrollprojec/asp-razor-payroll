@page
@model PayrollAppRazorPages.Pages.Staff.SalaryModel
@{
    ViewData["Title"] = "Salary";
}

<h4>Salary</h4>

<form>
    <p>
        <select class="mr-md-3" asp-for="SelectedYear" asp-items="Model.Years">
        </select>
        <input type="submit" value="Filter" />
            </p>
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    Month
                </th>
                <th>
                    Net
                </th>
                <th>
                    View Salary
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SalaryList)
            {
                if (item.Net > 0)
                {
                    <tr>
                        <td>
                            @item.Month
                        </td>
                        <td>
                            RM @Html.DisplayFor(model => item.Net)
                        </td>
                        <td>
                            <a asp-page="./SalaryDetails" asp-route-id="@item.Id">@item.GenDate.ToShortDateString()</a>
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>
                            @item.Month
                        </td>
                        <td>
                            -
                        </td>
                        <td>
                            -
                        </td>
                    </tr>
                }

            }

        </tbody>
    </table>
</form>