@page
@model PayrollAppRazorPages.Pages.WorkDaySettingsModel
@{
    ViewData["Title"] = "Workday Settings";
    string[] Days = new string[] { "Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday" };
}

<div class="container row jumbotron" style="margin-left: 10px; background-color:darkorange;color:white;">
    <div class="container">
        <div class="col-auto text-white"><h4>Workday Settings</h4></div>

    </div>
</div>

<div class="fancy-floating" style="padding: 0 55px; margin-top: -81px;">
    <div class="card" style="max-width:300px; border: 1px solid darkorange;">
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post">
            <div class="card-body">
                @for (var i = 0; i <= 6; i++)
                {
                <label>
                    <input name="AreChecked" @(Model.Days.Contains(i.ToString())? "checked": "") type="checkbox" value="@i" /> @Days[i]
                </label><br />
                }
                <hr />
                <button class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

