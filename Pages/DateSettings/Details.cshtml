@page
@model PayrollAppRazorPages.Pages.DateSettings.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="card" style="max-width:800px;">
    <h4 class="card-header">Holiday</h4>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Holiday.HolidayDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Holiday.HolidayDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Holiday.HolidayDes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Holiday.HolidayDes)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a class="btn btn-info" asp-page="./Edit" asp-route-id="@Model.Holiday.Id">Edit</a>
        <a class="btn btn-outline-secondary" asp-page="./Create">Continue Adding</a>
        <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
    </div>
</div>
