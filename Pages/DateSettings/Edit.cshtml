@page
@model PayrollAppRazorPages.Pages.DateSettings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<br />

<div class="card" style="max-width:500px;">
    <h4 class="card-header">Holiday @@ @Model.HolidayDate.ToString("dd-MM-yyyy")</h4>
    <div class="card-body">
        <div class="row">
            <div class="col-md-7">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="Holiday.Id" />
                    <div class="form-group">
                        <label asp-for="Holiday.HolidayDate" class="control-label"></label>
                        <input value="@Model.HolidayDate.ToString("yyyy-MM-dd")"
                               asp-for="Holiday.HolidayDate" class="form-control" />
                        <span asp-validation-for="Holiday.HolidayDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Holiday.HolidayDes" class="control-label"></label>
                        <input asp-for="Holiday.HolidayDes" class="form-control" />
                        <span asp-validation-for="Holiday.HolidayDes" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a class="btn btn-outline-secondary" asp-page="./Create">Back to Adding</a>
        <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
