@page "{Id}"
@model PayrollAppRazorPages.Pages.Manage.Staff.EditModel
@{
    ViewData["Title"] = "Edit Staff";
}

<h4>Edit Staff</h4>

<form method="post">
    <hr />
    @*row*@
    <div class="card-deck">
        @*col-md-5*@
        <div class="card ">
            <h4 class="card-header">Personal Details</h4>

            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Input.UserName"></label>
                    <input asp-for="Input.UserName" class="form-control" disabled />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Input.UserName" />

                <div class="form-group">
                    <label asp-for="Input.FullName"></label>
                    <input asp-for="Input.FullName" class="form-control" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ICNo"></label>
                    <input asp-for="Input.ICNo" class="form-control" />
                    <span asp-validation-for="Input.ICNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            


        </div>
        @*col-md-5 offset-md-2*@
        <div class="card">

            <h4 class="card-header">Employee Details</h4>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Input.DOB"></label>
                    <input asp-for="Input.DOB" class="form-control" />
                    <span asp-validation-for="Input.DOB" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.DateJoined"></label>
                    <input asp-for="Input.DateJoined" class="form-control" />
                    <span asp-validation-for="Input.DateJoined" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.TaxNo"></label>
                    <input asp-for="Input.TaxNo" class="form-control" />
                    <span asp-validation-for="Input.TaxNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.EPFNo"></label>
                    <input asp-for="Input.EPFNo" class="form-control" />
                    <span asp-validation-for="Input.EPFNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.SocsoNo"></label>
                    <input asp-for="Input.SocsoNo" class="form-control" />
                    <span asp-validation-for="Input.SocsoNo" class="text-danger"></span>
                </div>
            </div>
            @*end card-body*@
        </div>
    </div><br />

    <div class="card-deck">
        <div class="card">
            <h4 class="card-header">Default Salary Details</h4>
            @*<hr />*@
            <div class="row card-body">
                <div class="form-group col-md-5">
                    <label asp-for="Input.BasicSalary"></label>
                    <input asp-for="Input.BasicSalary" class="form-control" />
                    <span asp-validation-for="Input.BasicSalary" class="text-danger"></span>
                </div>
                <div class="col-md-7"></div>
                <div class="form-group col-md-5">
                    <label asp-for="Input.Allowances"></label>
                    <input asp-for="Input.Allowances" class="form-control" />
                    <span asp-validation-for="Input.Allowances" class="text-danger"></span>
                </div>
                <div class="col-md-7"></div>
                <div class="form-group col-md-5">
                    <label asp-for="Input.EPF"></label>
                    <input asp-for="Input.EPF" class="form-control" />
                    <span asp-validation-for="Input.EPF" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5 offset-md-2">
                    <label asp-for="Input.EREPF"></label>
                    <input asp-for="Input.EREPF" class="form-control" />
                    <span asp-validation-for="Input.EREPF" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="Input.Socso" class="control-label"></label>
                    @*<input asp-for="StaffSalary.Socso" class="form-control" />*@
                    <select onchange="doSocso()" id="socsoSelect" asp-for="Input.Socso" class="form-control">
                        <option value="1">First Category(Employment Injury Scheme and Invalidity Scheme)</option>
                        <option value="2">Second Category(Employment Injury Scheme)</option>
                    </select>
                    <span asp-validation-for="Input.Socso" class="text-danger"></span>
                </div>
                <div class="col-md-7"></div>

                <div class="form-group col-md-5">
                    <label asp-for="Input.SocsoRm"></label>
                    <input id="eesocso" asp-for="Input.SocsoRm" class="form-control" />
                    <span asp-validation-for="Input.SocsoRm" class="text-danger"></span>
                </div>

                <div class="form-group col-md-5 offset-md-2">
                    <label asp-for="Input.ERSocsoRm"></label>
                    <input id="ersocso" asp-for="Input.ERSocsoRm" class="form-control" />
                    <span asp-validation-for="Input.ERSocsoRm" class="text-danger"></span>
                </div>

                <div class="form-group col-md-5">
                    <label asp-for="Input.EIS"></label>
                    <input asp-for="Input.EIS" class="form-control" />
                    <span asp-validation-for="Input.EIS" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5 offset-md-2">
                    <label asp-for="Input.EREIS"></label>
                    <input asp-for="Input.EREIS" class="form-control" />
                    <span asp-validation-for="Input.EREIS" class="text-danger"></span>
                </div>

                <div class="form-group col-md-5">
                    <label asp-for="Input.Tax"></label>
                    <input asp-for="Input.Tax" class="form-control" />
                    <span asp-validation-for="Input.Tax" class="text-danger"></span>
                </div>
                <div class="col-md-7"></div>
                <div class="form-group col-md-5">
                    <br />
                    <button type="submit" class="btn btn-primary col-md-5 mr-2">Save</button>
                    <a class="btn btn-secondary col-md-5 mr-2" asp-page="./Details" asp-route-id="@Model.Input.Id">Cancel</a>
                </div>
            </div>
        </div>
        
    </div>
    

</form>
<br />
<br />
<div>
    <a asp-page="./Index">Back to List</a>
</div>

<script>
    function doSocso() {
        let select = document.getElementById('socsoSelect');
        let eesocso = document.getElementById('eesocso');
        let ersocso = document.getElementById('ersocso');

        if (select.value == "2") {
            eesocso.value = 0;
 
        }
    }
</script>