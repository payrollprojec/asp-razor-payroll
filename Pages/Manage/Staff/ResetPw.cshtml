@page
@model PayrollAppRazorPages.Pages.Manage.Staff.ResetPwModel
@{
    ViewData["Title"] = "ResetPw";
}

    <div class="card" style="max-width:500px;">
        <h4 class="card-header text-white" style="background-color:#6f65a1;">Reset password of Staff  </h4>
        <div class="card-body">
            <p>Username: @Html.DisplayFor(model => model.applicationUser.UserName)</p>
            <p>Staff Name: @Html.DisplayFor(model => model.applicationUser.FullName)</p>
        </div>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                @*<input type="hidden" asp-for="Input.Id" />*@
            </div>
            <div class="card-footer">
                <button class="btn btn-primary" type="submit">Reset Password</button>
                <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
            </div>
            
        </form>
    </div>
<br />

