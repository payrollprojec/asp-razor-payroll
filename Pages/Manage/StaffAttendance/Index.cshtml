@page
@model PayrollAppRazorPages.Pages.Manage.StaffAttendance.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Attendance[0].ApplicationUser.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendance[0].ApplicationUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendance[0].ApplicationUser.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendance[0].PunchDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendance[0].AttendanceStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Attendance) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PunchDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttendanceStatus.Id) - @Html.DisplayFor(modelItem => item.AttendanceStatus.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
