@page "{Id}"
@model PayrollAppRazorPages.Pages.Manage.Admin.DeleteModel
@{
    ViewData["Title"] = "Delete";
}


    <div class="card" style="max-width:500px; border-color:steelblue;">
        <h4  class="card-header text-white" style="background-color:steelblue;">Delete Admin - @Html.DisplayFor(model => model.applicationUser.UserName)</h4>
      
        <div class="card-body">
            <p>Are you sure you want to delete this user?</p>
            <dl class="row">
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.applicationUser.FullName)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.applicationUser.FullName)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.applicationUser.Email)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.applicationUser.Email)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.applicationUser.PhoneNumber)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.applicationUser.PhoneNumber)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.applicationUser.ICNo)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.applicationUser.ICNo)
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <form method="post">
                <input type="hidden" asp-for="applicationUser.Id" />
                <input class="btn btn-danger" type="submit" value="Delete" />
                <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
            </form>
        </div>
    </div>
