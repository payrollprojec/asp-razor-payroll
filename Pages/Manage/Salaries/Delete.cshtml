@page
@model PayrollAppRazorPages.Pages.Manage.Salaries.DeleteModel

@{
    ViewData["Title"] = "Delete";
}


<div class="card" style="max-width:400px;border-color:green;">
    <h4 class="card-header bg-success">Delete Salary</h4>
    <div class="card-body">
        <p>Are you sure you want to delete this?</p>
        <dl class="row">
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.StaffSalary.staff.FullName)
            </dt>
            <dd class="col-sm-7">
                : @Html.DisplayFor(model => model.StaffSalary.staff.FullName)
            </dd>
            <dt class="col-sm-5">
                Salary Period
            </dt>
            <dd class="col-sm-7">
                : @{ string SelectedDate = DateTime.Parse(Model.StaffSalary.Year.ToString() + "-" + Model.StaffSalary.Month.ToString() + "-01").ToString("MMMM yyyy");}
                @SelectedDate
            </dd>
        </dl>
        @{
            var parms = new Dictionary<string, string>
    {
        {"SelectedMonth", Model.StaffSalary.Month.ToString() },
        {"SelectedYear", Model.StaffSalary.Year.ToString() }
        };
        }
        <hr />
        <form method="post">
            <input type="hidden" asp-for="StaffSalary.salaryID" />
            <input type="submit" value="Delete" class="btn btn-danger" />

            <a class="btn btn-secondary" asp-page="./Index" asp-all-route-data="parms">Back to List</a>
        </form>
    </div>

</div>

